/**index.wxss**/
@import "../../components/myModal/index.wxss";
.flexbox { display:-webkit-box; display:-webkit-box-flex; display:box; display:-webkit-flex; display:flex; -webkit-box-pack:justify; -webkit-justify-content:space-around; }
.flexbox > .flex-item { -webkit-box-flex:1; box-flex:1; flex:1;  }
::-webkit-scrollbar { width: 0; height: 0; color: transparent;}

page{ height:100%; font:26rpx/40rpx "微软雅黑"; }

.container{ box-sizing:border-box;  height:100%; overflow-y:scroll;-webkit-overflow-scrolling:touch;  position:relative; }
.container .return{ background:#2F2E33; padding:20rpx 0  0 20rpx; font-size:0;}
.container .return .icon{ height:65rpx; width:65rpx;  }

.backcolor{ background:#2F2E33; height:300rpx; width:100%; position:absolute; left:0; top:0; z-index:0; }
.top{ background:#FDD01B; height:150rpx; position:relative; }
.top .txt{ position:absolute; left:40rpx; bottom:25rpx; font-size:30rpx; font-weight:bold; }
.top .txt .welcome{ font-size:38rpx; margin-top:8px;  }
.top .person{ position:absolute; right:50rpx; bottom:20rpx; height:100rpx; width:100rpx; border-radius:50%;  }
.main{ padding:30rpx 40rpx;}
.main .infoCon{ background:#fff; border-radius:10px; box-shadow:2rpx 2rpx 12rpx rgba(0,0,0,0.3); position:relative; }
.main .infoCon .dotLeft{ position:absolute; left:-10rpx; margin-top:-10rpx; top:90rpx; display:inline-block; height:20rpx; width:20rpx; background:#fff; border-radius:50%;  }
.main .infoCon .dotRight{ position:absolute; right:-10rpx; margin-top:-10rpx; top:90rpx; display:inline-block; height:20rpx; width:20rpx; background:#fff; border-radius:50%;  }

.main .title{ height:90rpx; font:30rpx/90rpx "微软雅黑"; font-weight:bold; text-align:center; background:#FDD01B; border-radius:20rpx 20rpx 0 0; }
.main .info{ padding:30rpx 250rpx 80rpx 40rpx; min-height:128rpx; position:relative; }
.main .info.pack{ padding:30rpx 250rpx 50rpx 40rpx;  }
.main .info .shop_img{ position:absolute; right:30rpx; top:40rpx; width:200rpx; height:128rpx;}
.main .info .shop{ margin-bottom:20rpx; font:28rpx/35rpx "微软雅黑";  min-height:35rpx; color:#000; font-weight:bold; position:relative; padding-left:40rpx;}
.main .info .addr{ font:26rpx/30rpx "微软雅黑"; min-height:30rpx; position:relative; padding-left:40rpx; }
.main .info .shop_icon{ height:30rpx; width:31rpx; position:absolute; left:0; top:3rpx; }
.main .info .addr_icon{ height:30rpx; width:26rpx; position:absolute; left:2rpx; top:1rpx; }

.main .codeNum{ padding:0 30rpx; }
.main .codeNum .code{ border-top:1px solid #e8e8e8; padding:40rpx 0 65rpx 0; text-align:center; vertical-align:middle;}
.main .codeNum .code{ font:34rpx/80rpx "微软雅黑"; font-weight:bold; vertical-align:middle; }
.main .codeNum .code_num{ display:inline-block; margin-left:16rpx; font:80rpx/80rpx "微软雅黑"; font-weight:bold; color:#E5004F; vertical-align:middle; }
.main .enterBtn{ position:absolute; bottom:-45rpx; left:50%; margin-left:-275rpx;  font:30rpx/90rpx "微软雅黑"; height:90rpx; width:550rpx; font-weight:bold; text-align:center;  background:#FFC600; box-shadow:0 0.1rem 0.2rem rgba(255, 198,0,0.5); border-radius:30rpx;}

.main .codeNum2{ padding-left:60rpx; }
.main .codeNum2 .code{ vertical-align:middle;}
.main .codeNum2 .code{ font:24rpx/60rpx "微软雅黑"; font-weight:bold; vertical-align:middle; }
.main .codeNum2 .code_num{ display:inline-block; margin-left:16rpx; font:40rpx/60rpx "微软雅黑"; font-weight:bold; color:#E5004F; vertical-align:middle; }
.swiper{ width:100%; height:400rpx; display:inline-block;  font-size:0; margin-top:60rpx; }
.swiper.absolute{ position:absolute; bottom:0; margin-top:0; }
.swiper .slide-image{ width:100%; height:100%; font-size:0; }

.menu{ margin-top:50rpx; padding:0 70rpx; }
.menu .menuItem{ height:160rpx; width:250rpx; position:relative;  }
.menu .menuItem image{ height:100%; width:100%; }
.menu .menuItem .txt{ line-height:160rpx; position:absolute; text-align:center; width:100%; font-size:30rpx; font-weight:bold; }
 

.bottomCon{ text-align:center; position:absolute; bottom:80rpx; left:50%; margin-left:-264rpx; }
.bottomCon .title{ font:26rpx/60rpx "微软雅黑"; color:#000;  margin-bottom:20rpx; font-weight:bold; }
.bottomCon .title .backet{ color:#FDD01B; display:inline-block; margin-left:5px; }
.bottomCon .itemCon{ font:26rpx/40rpx "微软雅黑"; color:#333;  }
.bottomCon .itemCon .item{ display:inline-block; margin:0 30rpx;}
.bottomCon .itemCon .item_img{ height:60rpx; width:60rpx; }


.notice{ z-index:10000; position:fixed; height:100%; width:100%; background:#fff; }
.notice .tip{  z-index:10000; position:fixed; top:20rpx; left:20rpx;}
.notice .img{ height:100%; width:100%; }
.notice .btn{ position:fixed; z-index:10000; top:40rpx; right:40rpx; height:80rpx; width:80rpx; }


.panel_cover{position:fixed; width:100%; height:100%; background:rgba(0,0,0,0.7); top:0; left:0; z-index:199; }
.panel{ z-index:200; position:fixed; box-sizing:border-box; width:580rpx; left:50%; top:48%; transform:translate(-50%,-50%); background:none; }
.panel image{ width:100%; }
.panel .closeBtn{ position:fixed; z-index:10000; left:50%; bottom:-80rpx; transform:translateX(-50%); height:40rpx; width:40rpx; padding:20rpx; }